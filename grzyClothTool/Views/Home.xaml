<UserControl x:Class="grzyClothTool.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:grzyClothTool.Views"
             xmlns:c="clr-namespace:grzyClothTool.Controls"
             xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"

             mc:Ignorable="d" 
             d:Background="white"
             d:DesignHeight="450" d:DesignWidth="800"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType">
    <UserControl.Resources>
        <Style x:Key="ToolCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Brush100}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush400}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush200}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource Brush350}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ClickableCardButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <GroupBox Style="{StaticResource FixedGroupBox}" Header="Start your journey" Grid.Column="0" Margin="2">
            <DockPanel>
                <c:CustomButton Label="Close" Height="60" DockPanel.Dock="Bottom" Padding="5" CornerRadius="5" MyBtnClickEvent="Close_Click" />

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <c:CustomButton Label="Create new project" Height="100" FontSize="20" Padding="5" CornerRadius="5" MyBtnClickEvent="CreateNew_Click" />
                        <c:CustomButton Label="Import project" Height="60" Padding="5" CornerRadius="5" MyBtnClickEvent="ImportProject_Click" />
                        <c:CustomButton Label="Open addon" Height="60" Padding="5" CornerRadius="5" MyBtnClickEvent="OpenAddon_Click" />
                        <c:CustomButton Label="Open save" Height="60" Padding="5" CornerRadius="5" MyBtnClickEvent="OpenSave_Click" />

                        <TextBlock Text="Recently opened" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="5,20,5,8" 
                                   Foreground="{DynamicResource Brush950}" />
                        
                        <ItemsControl ItemsSource="{Binding RecentlyOpened}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Background="Transparent" 
                                            BorderThickness="0" 
                                            Cursor="Hand" 
                                            Padding="0" 
                                            Margin="0,0,0,8"
                                            HorizontalContentAlignment="Stretch"
                                            Click="RecentProject_Click" 
                                            Tag="{Binding FilePath}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="CardBorder"
                                                        Background="{DynamicResource Brush50}" 
                                                        BorderBrush="{DynamicResource Brush300}" 
                                                        BorderThickness="1" 
                                                        CornerRadius="6" 
                                                        Margin="6,0"
                                                        Padding="12,10">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Border Background="{DynamicResource Brush200}" 
                                                                CornerRadius="4" 
                                                                Width="32" 
                                                                Height="32" 
                                                                Margin="0,0,10,0"
                                                                VerticalAlignment="Center"
                                                                Grid.Column="0"
                                                                Grid.RowSpan="3">
                                                            <icons:MaterialIcon Kind="FolderOpen" 
                                                                                Width="18" 
                                                                                Height="18" 
                                                                                Foreground="{DynamicResource Brush700}"
                                                                                HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"/>
                                                        </Border>

                                                        <TextBlock Text="{Binding ProjectName}" 
                                                                   FontSize="13" 
                                                                   FontWeight="SemiBold" 
                                                                   Foreground="{DynamicResource Brush950}"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Grid.Column="1"
                                                                   Grid.Row="0"/>

                                                        <StackPanel Orientation="Horizontal" 
                                                                Grid.Column="1" 
                                                                Grid.Row="1"
                                                                Margin="0,4,4,0">
                                                            <Border Background="{DynamicResource Brush200}"
                                                                    CornerRadius="3"
                                                                    Padding="6,2">
                                                                <TextBlock FontSize="10" 
                                                                    Foreground="{DynamicResource Brush800}">
                                                                    <Run Text="{Binding AddonCount, Mode=OneWay}"/>
                                                                    <Run Text=" addons"/>
                                                                </TextBlock>
                                                            </Border>
                                                            <Border Background="{DynamicResource Brush200}"
                                                                    CornerRadius="3"
                                                                    Padding="6,2"
                                                                    Margin="4,0,4,0">
                                                                <TextBlock FontSize="10" 
                                                                    Foreground="{DynamicResource Brush800}">
                                                                    <Run Text="{Binding DrawableCount, Mode=OneWay}"/>
                                                                    <Run Text=" drawables"/>
                                                                </TextBlock>
                                                            </Border>
                                                        </StackPanel>

                                                        <StackPanel Orientation="Horizontal" 
                                                                    Grid.Column="1" 
                                                                    Grid.Row="2"
                                                                    Margin="0,3,0,0">
                                                            <icons:MaterialIcon Kind="ClockOutline" 
                                                                                Width="11" 
                                                                                Height="11" 
                                                                                Foreground="{DynamicResource Brush600}"
                                                                                VerticalAlignment="Center"
                                                                                Margin="0,0,4,0"/>
                                                            <TextBlock FontSize="10" 
                                                                       Foreground="{DynamicResource Brush600}">
                                                                <Run Text="{Binding LastModified, StringFormat='{}Last modified: {0:yyyy-MM-dd HH:mm}'}"/>
                                                            </TextBlock>
                                                        </StackPanel>

                                                        <Button Background="Transparent"
                                                                BorderThickness="0"
                                                                Cursor="Hand"
                                                                VerticalAlignment="Center"
                                                                Grid.Column="2"
                                                                Grid.RowSpan="3"
                                                                Margin="8,0,0,0"
                                                                Padding="4"
                                                                Click="RemoveRecentProject_Click"
                                                                Tag="{Binding FilePath}">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                        Padding="{TemplateBinding Padding}">
                                                                                    <icons:MaterialIcon x:Name="CloseIcon"
                                                                                                        Kind="Close" 
                                                                                                        Width="16" 
                                                                                                        Height="16" 
                                                                                                        Foreground="{DynamicResource Brush600}"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter TargetName="CloseIcon" Property="Foreground" Value="#D32F2F"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="CardBorder" Property="Background" Value="{DynamicResource Brush100}"/>
                                                        <Setter TargetName="CardBorder" Property="BorderBrush" Value="{DynamicResource Brush400}"/>
                                                        <Setter TargetName="CardBorder" Property="BorderThickness" Value="1"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="CardBorder" Property="Background" Value="{DynamicResource Brush150}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel HorizontalAlignment="Center" 
                                    Margin="20"
                                    Visibility="{Binding ShowNoRecentProjects, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <icons:MaterialIcon Kind="FolderOpenOutline" 
                                                Width="48" 
                                                Height="48" 
                                                Foreground="{DynamicResource Brush400}"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,10"/>
                            <TextBlock Text="No recent projects" 
                                       FontSize="12" 
                                       FontStyle="Italic" 
                                       Foreground="{DynamicResource Brush600}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </GroupBox>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <GroupBox Style="{StaticResource FixedGroupBox}" Header="Explore my other tools" Grid.Column="0" Grid.Row="1" Margin="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding OtherTools}" Padding="4">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource ClickableCardButton}"
                                               CommandParameter="{Binding Url}"
                                               Click="OpenToolUrl_Click">
                                    <Border Style="{StaticResource ToolCardStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Background="{DynamicResource Brush300}" 
                                                           CornerRadius="8" 
                                                           Width="48" 
                                                           Height="48" 
                                                           Margin="0,0,14,0"
                                                           VerticalAlignment="Top"
                                                           Grid.Column="0">
                                                <icons:MaterialIcon Kind="Tools" 
                                                                           Width="28" 
                                                                           Height="28" 
                                                                           Foreground="{DynamicResource Brush800}"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           UseLayoutRounding="True"/>
                                            </Border>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" 
                                                                  FontSize="17" 
                                                                  FontWeight="Bold" 
                                                                  Foreground="{DynamicResource Brush900}"
                                                                  Margin="0,0,0,6"
                                                                  UseLayoutRounding="True"
                                                                  TextOptions.TextFormattingMode="Display"/>

                                                <TextBlock Text="{Binding Description}" 
                                                                  FontSize="13" 
                                                                  TextWrapping="Wrap" 
                                                                  Foreground="{DynamicResource Brush700}"
                                                                  LineHeight="19"
                                                                  Margin="0,0,0,8"
                                                                  UseLayoutRounding="True"
                                                                  TextOptions.TextFormattingMode="Display"/>

                                                <StackPanel Orientation="Horizontal">
                                                    <icons:MaterialIcon Kind="CursorDefaultClick" 
                                                                               Width="14" 
                                                                               Height="14" 
                                                                               Foreground="{DynamicResource Brush950}"
                                                                               VerticalAlignment="Center"
                                                                               Margin="0,0,5,0"
                                                                               UseLayoutRounding="True"/>
                                                    <TextBlock Text="Click to learn more" 
                                                                      FontSize="12" 
                                                                      FontWeight="Medium"
                                                                      Foreground="{DynamicResource Brush950}"
                                                                      VerticalAlignment="Center"
                                                                      UseLayoutRounding="True"
                                                                      TextOptions.TextFormattingMode="Display"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>

            <GroupBox Style="{StaticResource FixedGroupBox}" Header="Did you know?" Grid.Column="0" Grid.Row="0" Margin="2">
                <TextBlock Text="{Binding RandomDidYouKnow}" FontSize="14" FontStyle="Italic" Padding="5" Margin="5" TextWrapping="WrapWithOverflow"  />
            </GroupBox>

            <GroupBox Style="{StaticResource FixedGroupBox}" Header="Latest changes" Grid.Column="0" Grid.Row="2" Margin="2">
                <DockPanel Margin="5">
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                        <TextBlock FontSize="13" FontWeight="Bold" Margin="0,0,0,3">
                            <Run Text="Version: " />
                            <Run Text="{Binding LatestVersion, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>

                    <c:CustomButton Label="View Full Changelog on GitHub" Height="35" DockPanel.Dock="Bottom" Margin="0,5,0,0" Padding="5" CornerRadius="5" MyBtnClickEvent="ViewChangelog_Click" />

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ChangelogHighlights}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,1">
                                        <TextBlock Text="• " FontSize="12" />
                                        <TextBlock Text="{Binding}" FontSize="12" TextWrapping="Wrap" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </GroupBox>

            <Grid Grid.Column="1" Grid.RowSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <GroupBox Style="{StaticResource FixedGroupBox}" Header="Supporters" Margin="2" Padding="5" Grid.Row="0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding PatreonList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Margin="2" FontStyle="Italic" FontSize="14" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>