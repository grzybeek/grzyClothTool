<UserControl x:Class="grzyClothTool.Views.SettingsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:grzyClothTool.Views"
             xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:helpers="clr-namespace:grzyClothTool.Helpers"
             xmlns:c="clr-namespace:grzyClothTool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800"
             d:Background="{DynamicResource Brush50}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <Button Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent" BorderThickness="0" Padding="5" Click="BackButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Grid Width="30" Height="30">
                            <Ellipse Width="30" Height="30" Stroke="{DynamicResource Brush950}" StrokeThickness="2">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="{DynamicResource Color50}"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Path Stroke="{DynamicResource Brush950}" StrokeThickness="2" Fill="{DynamicResource Brush950}">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="20,9" IsClosed="True">
                                            <LineSegment Point="20,21" />
                                            <LineSegment Point="9,15" />
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>
                        <TextBlock Foreground="{DynamicResource Brush950}" Margin="5,0,5,2" VerticalAlignment="Center" FontSize="16" FontWeight="Normal">Back</TextBlock>
                    </StackPanel>
                </Button>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!--<c:CustomButton Label="PATREON ACCOUNT" Padding="10" Width="200" CornerRadius="5" MyBtnClickEvent="PatreonAccount_Click" />-->

                <ToggleButton Margin="5"  IsChecked="{Binding IsDarkMode, Mode=OneWay}" Click="ThemeModeChange_Click">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Width" Value="100"/>
                            <Setter Property="Height" Value="25"/>
                            <Setter Property="Background" Value="{DynamicResource Brush500}"/>
                            <Setter Property="Foreground" Value="{DynamicResource Brush950}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <StackPanel Orientation="Horizontal">
                                            <!-- replaced LightbulbOn and LightbulbOff icons svg in CustomIconProvider -->
                                            <icons:MaterialIcon Kind="LightbulbOn" Width="22" Margin="3"/>
                                            <Border Width="50" Background="{TemplateBinding Background}" CornerRadius="15">
                                                <Grid>
                                                    <Ellipse x:Name="SwitchBall" Fill="{DynamicResource Brush50}" Width="11" Height="11" HorizontalAlignment="Left" Margin="5,0" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                            <icons:MaterialIcon Kind="LightbulbOff" Width="20" Margin="3"/>
                                        </StackPanel>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ThicknessAnimation Storyboard.TargetName="SwitchBall" Storyboard.TargetProperty="Margin" To="33,0,5,0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ThicknessAnimation Storyboard.TargetName="SwitchBall" Storyboard.TargetProperty="Margin" To="5,0,33,0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>
            </StackPanel>
        </Grid>


        <Grid Grid.Row="1">
            <GroupBox Grid.ColumnSpan="2" Style="{DynamicResource FixedGroupBox}" Header="Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="5" Grid.Column="0">

                            <GroupBox Margin="0,5" Height="120" Style="{DynamicResource FixedGroupBox}">
                                <GroupBox.Header>
                                    <TextBlock FontSize="15" FontWeight="Bold" Foreground="{DynamicResource Brush950}" Text="Drawable polygon count limit" />
                                </GroupBox.Header>
                                <Grid Margin="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Padding="5,2,5,5" FontStyle="Italic" FontWeight="Normal" Foreground="{DynamicResource Brush500}" Grid.Row="0" Grid.ColumnSpan="3" TextWrapping="Wrap">Sets limit for drawable polygon count, if it exceeds this number it will display warning</TextBlock>
                                    <c:SettingsLabelTextBox Grid.Row="1" Grid.Column="0" Label="High LOD" LabelFontSize="12" Text="{Binding Path=Instance.PolygonLimitHigh, Source={x:Static helpers:SettingsHelper.Instance}, Mode=TwoWay}" ButtonVisible="False" />
                                    <c:SettingsLabelTextBox Grid.Row="1" Grid.Column="1" Label="Medium LOD" LabelFontSize="12" Text="{Binding Path=Instance.PolygonLimitMed, Source={x:Static helpers:SettingsHelper.Instance}, Mode=TwoWay}" ButtonVisible="False" />
                                    <c:SettingsLabelTextBox Grid.Row="1" Grid.Column="2" Label="Low LOD" LabelFontSize="12" Text="{Binding Path=Instance.PolygonLimitLow, Source={x:Static helpers:SettingsHelper.Instance}, Mode=TwoWay}" ButtonVisible="False" />
                                </Grid>
                            </GroupBox>

                            <GroupBox Margin="0,5" Height="140" Style="{DynamicResource FixedGroupBox}">
                                <GroupBox.Header>
                                    <TextBlock FontSize="15" FontWeight="Bold" Foreground="{DynamicResource Brush950}" Text="Texture resolution limits" />
                                </GroupBox.Header>
                                <Grid Margin="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Padding="5,2,5,5" FontStyle="Italic" FontWeight="Normal" Foreground="{DynamicResource Brush500}" Grid.Row="0" Grid.ColumnSpan="3" TextWrapping="Wrap">Sets maximum resolution for each texture type. If width or height exceeds the limit, a warning will be displayed</TextBlock>
                                    <c:SettingsLabelComboBox Grid.Row="1" Grid.Column="0" Label="Diffuse" LabelFontSize="12" ItemsSource="{Binding TextureResolutionOptions}" SelectedItem="{Binding Path=Instance.TextureResolutionLimitDiffuse, Source={x:Static helpers:SettingsHelper.Instance}, Mode=TwoWay}" />
                                    <c:SettingsLabelComboBox Grid.Row="1" Grid.Column="1" Label="Normal" LabelFontSize="12" ItemsSource="{Binding TextureResolutionOptions}" SelectedItem="{Binding Path=Instance.TextureResolutionLimitNormal, Source={x:Static helpers:SettingsHelper.Instance}, Mode=TwoWay}" />
                                    <c:SettingsLabelComboBox Grid.Row="1" Grid.Column="2" Label="Specular" LabelFontSize="12" ItemsSource="{Binding TextureResolutionOptions}" SelectedItem="{Binding Path=Instance.TextureResolutionLimitSpecular, Source={x:Static helpers:SettingsHelper.Instance}, Mode=TwoWay}" />
                                </Grid>
                            </GroupBox>
                        </StackPanel>
                        <StackPanel Margin="5" Grid.Column="1">
                            <GroupBox Margin="0,5" Height="360" Style="{DynamicResource FixedGroupBox}">
                                <GroupBox.Header>
                                    <TextBlock FontSize="15" FontWeight="Bold" Foreground="{DynamicResource Brush950}" Text="General settings" />
                                </GroupBox.Header>

                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <StackPanel Margin="0">
                                        <c:SettingsLabelTextBox
                                            Margin="5"
                                            Label="Main Projects Folder"
                                            Text="{Binding MainProjectsFolder, Mode=TwoWay}"
                                            Description="Main folder where all your clothing projects are stored"
                                            Title="Select your Main Projects Folder"
                                            ButtonClick="MainProjectsFolder_Click" />

                                        <c:SettingsLabelTextBox
                                            Margin="5"
                                            Label="Current GTAV Path"
                                            Text="{Binding GTAVPath, Mode=OneWay}"
                                            Description="GTAV path is required for 3D preview to work"
                                            Title="Select your GTA V Path"
                                            ButtonClick="GTAVPath_Click" />

                                        <c:SettingsLabelCheckBox
                                            Margin="5"
                                            Label="Display drawable path"
                                            Text="Enabled will display used path for selected drawable"
                                            IsChecked="{Binding Path=Instance.DisplaySelectedDrawablePath, Source={x:Static helpers:SettingsHelper.Instance}, Mode=TwoWay}" />

                                        <c:SettingsLabelCheckBox
                                            Margin="5"
                                            Label="Delete drawable files automatically"
                                            Text="When enabled, it will automatically remove the associated files from your system when you delete a drawable from the addon"
                                            DisplayWarning="WARNING: This function will modify and remove files from your PC. Any removed files cannot be recovered.&#x0a;&#x0a;Are you sure you want to enable it?"
                                            IsChecked="{Binding Path=Instance.AutoDeleteFiles, Source={x:Static helpers:SettingsHelper.Instance}, Mode=TwoWay}" />

                                        <c:SettingsLabelCheckBox
                                            Margin="5"
                                            Label="Mark new drawables"
                                            Text="When enabled, new drawables will be marked with a yellow dot"
                                            IsChecked="{Binding Path=Instance.MarkNewDrawables, Source={x:Static helpers:SettingsHelper.Instance}, Mode=TwoWay}" />
                                    </StackPanel>
                                </ScrollViewer>
                            </GroupBox>

                            <GroupBox Margin="0,5" Height="200" Style="{DynamicResource FixedGroupBox}">
                                <GroupBox.Header>
                                    <TextBlock FontSize="15" FontWeight="Bold" Foreground="{DynamicResource Brush950}" Text="Drawable Groups" />
                                </GroupBox.Header>
                                <Grid Margin="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Padding="5,2,5,5" FontStyle="Italic" FontWeight="Normal" Foreground="{DynamicResource Brush500}" Grid.Row="2" TextWrapping="Wrap">
                                        Groups organize drawables into folders: stream/[gender]/[group]/[type]
                                        <LineBreak/>
                                        Supports nesting: "police/swat/outfit1" or "clothing/jackets"
                                        <LineBreak/>
                                        Currently only supported in FiveM builds
                                    </TextBlock>

                                    <ListBox Grid.Row="0" 
                                             Margin="5"
                                             Background="Transparent"
                                             Foreground="{DynamicResource Brush950}"
                                             BorderBrush="{DynamicResource Brush500}"
                                             ItemsSource="{Binding Path=Instance.Groups, Source={x:Static helpers:GroupManager.Instance}}"
                                             SelectedItem="{Binding SelectedGroup, Mode=TwoWay}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" Padding="5,2" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>

                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                                        <TextBox x:Name="NewGroupTextBox" Width="200" Margin="0,0,5,0" 
                                                 Background="{DynamicResource Brush50}"
                                                 Foreground="{DynamicResource Brush950}"
                                                 BorderBrush="{DynamicResource Brush500}"/>
                                        <Button Content="Add Group" Width="80" Click="AddGroup_Click" Margin="0,0,5,0"
                                                Background="{DynamicResource Brush200}"
                                                Foreground="{DynamicResource Brush950}"/>
                                        <Button Content="Remove" Width="80" Click="RemoveGroup_Click"
                                                Background="{DynamicResource Brush200}"
                                                Foreground="{DynamicResource Brush950}"/>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>
                        </StackPanel>

                    </Grid>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
