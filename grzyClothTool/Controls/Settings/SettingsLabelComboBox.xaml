<UserControl x:Class="grzyClothTool.Controls.SettingsLabelComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:grzyClothTool.Controls"
             mc:Ignorable="d"
             x:Name="MyLabelComboBox"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="25" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0" 
            TextWrapping="Wrap" 
            Padding="0,0,0,1" 
            Foreground="{DynamicResource Brush950}" 
            Margin="5" 
            FontWeight="Bold" 
            Text="{Binding Label, ElementName=MyLabelComboBox}" 
            FontSize="{Binding LabelFontSize, ElementName=MyLabelComboBox}"
        />

        <ComboBox 
            Grid.Row="1" 
            Margin="5,0,0,0"
            VerticalContentAlignment="Center"
            ItemsSource="{Binding ItemsSource, ElementName=MyLabelComboBox}"
            SelectedItem="{Binding SelectedItem, ElementName=MyLabelComboBox, Mode=TwoWay}" 
        />
        
        <TextBlock 
            Grid.Row="2" 
            Padding="5,2,5,0" 
            d:Text="description for this combo box" 
            TextWrapping="Wrap" 
            Text="{Binding Description, ElementName=MyLabelComboBox}" 
            FontStyle="Italic" 
            FontWeight="Normal" 
            Foreground="{DynamicResource Brush500}" 
        />
    </Grid>
</UserControl>
