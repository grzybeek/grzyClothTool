<UserControl x:Class="grzyClothTool.Controls.GroupEditor"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:grzyClothTool.Controls"
         xmlns:helpers="clr-namespace:grzyClothTool.Helpers"
         xmlns:converters="clr-namespace:grzyClothTool.Converters"
         x:Name="MyGroupEditor"
         mc:Ignorable="d" 
         d:DesignHeight="40" d:DesignWidth="400">
        <UserControl.Resources>
            <converters:NullOrEmptyToFalseConverter x:Key="NullOrEmptyToFalseConverter" />
        </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Border Background="{DynamicResource Brush100}"
                    BorderBrush="{DynamicResource Brush400}"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <TextBlock Text="{Binding PlaceholderText, ElementName=MyGroupEditor}"
                               FontSize="12"
                               Foreground="{DynamicResource Brush500}"
                               FontStyle="Italic"
                               Padding="8,8"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Text, ElementName=GroupInputBox}" Value="" />
                                            <Condition Binding="{Binding PlaceholderText, ElementName=MyGroupEditor, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible" />
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    
                    <TextBox x:Name="GroupInputBox"
                             Background="Transparent"
                             Foreground="{DynamicResource Brush950}"
                             BorderThickness="0"
                             Padding="8,8"
                             FontSize="12"
                             TextChanged="GroupInputBox_TextChanged"
                             KeyDown="GroupInputBox_KeyDown"
                             LostFocus="GroupInputBox_LostFocus"
                             VerticalContentAlignment="Center"/>
                </Grid>
            </Border>

            <Popup x:Name="SuggestionsPopup"
                   PlacementTarget="{Binding ElementName=GroupInputBox}"
                   Placement="Bottom"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   PopupAnimation="Fade">
                <Border Background="{DynamicResource Brush100}"
                        BorderBrush="{DynamicResource Brush400}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,2,0,0"
                        MaxHeight="200"
                        Width="{Binding ActualWidth, ElementName=GroupInputBox}">
                    <ListBox x:Name="SuggestionsList"
                             Background="Transparent"
                             BorderThickness="0"
                             PreviewMouseLeftButtonUp="SuggestionsList_PreviewMouseLeftButtonUp"
                             KeyDown="SuggestionsList_KeyDown"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             HorizontalContentAlignment="Stretch">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource Brush200}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource Brush300}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                           FontSize="11"
                                           Foreground="{DynamicResource Brush900}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Popup>
        </Grid>
    </Grid>
</UserControl>
